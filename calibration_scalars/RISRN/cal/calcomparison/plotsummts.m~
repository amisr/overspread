clear all; close all;

expdirs = {'WorldDay54m','WorldDay54m5','WorldDay54mTest','WorldDay54mTest2'}; n1='WorldDay54m';
%expdirs = {'WorldDay55m'}; n1='WorldDay55m';

expdirs= = {'WorldDay*'}; n1='AllWorldDay';

for idir = 1:length(expdirs)
    if iscell(expdirs)
        tmatfs = dir([char(expdirs{idir}) '/*.mat']);
    else 
    end
    
    
    if idir==1
        matfs=tmatfs;
    else
        matfs=strvcat(matfs,tmatfs);
    end    

end

cnt=1;
   
    
   for ifile=1:length(matfs)
       
       d=load([char(expdirs{idir}) '/' matfs(ifile).name]);
       
       Time(cnt,:) = mean(d.AllTime);
       Cal(cnt,:) = median(d.AllCal);
       Noise(cnt,:)=median(d.AllCal);
       Ksys(cnt,:)=median(d.Tsys*d.AllNoise./d.AllCal);
        
       cnt=cnt+1
   end
       
    
    


xlims=[datenum(2009,1,1), now];

fpos=[0 0 0.5 0.8];
f1=figure('Units','normalized','Position',fpos); set(gcf,'paperpositionmode','auto');
set(gcf,'visible','off');

subplot(311);
set(gcf,'visible','off');
l=plot(Time,Cal,'k.'); set(l,'markersize',10);
xlim(xlims);
datetick('x','mmm-yy','keeplimits');
title(n1);
ylabel('Cal Power');

subplot(312);
set(gcf,'visible','off');
l=plot(Time,Noise,'k.'); set(l,'markersize',10);
xlim(xlims);
datetick('x','mmm-yy', 'keeplimits');
ylabel('Noise Power');

subplot(313);
set(gcf,'visible','off');
l=plot(Time,Ksys,'k.'); set(l,'markersize',10);
xlim(xlims);
datetick('x','mmm-yy','keeplimits');
ylabel('Tsys (K)');

set(gcf,'visible','on');

print(gcf,'-dpng','-r300',[n1 '-summ.png']);
close all;
